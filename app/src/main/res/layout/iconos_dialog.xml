<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:ignore="ContentDescription"
    android:id="@+id/laySenyas"
    >

    <ProgressBar
        android:id="@+id/progressSenyas"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:max="20"
        android:progress="0"/>

    <android.widget.GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="vertical"
        tools:ignore="UselessParent"
        android:paddingBottom="20dp"
        android:clipToPadding="false">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/espada"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/basto"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/manillaEspadas"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/manillaOros"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/tres"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/ciego"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/envid33"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/envid32"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            tools:background="#000">

            <ImageView
                android:id="@+id/envid31"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cejas"
                android:layout_gravity="center"
                android:onClick="seleccionaUnaSenya"/>

        </FrameLayout>


    </android.widget.GridLayout>

</LinearLayout>